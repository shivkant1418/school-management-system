<div class="headline" style=" width: 100%; height: 40px; background: #eee; margin-bottom: 20px; border-top: solid 1px #ccc; border-bottom: solid 1px #ccc; ">
  <p style=" position: relative; top: 7px;  left: 10px; font-weight: 700; ">Use Search Criteria</p>
</div>

<%= form_tag admin_users_path, method: :get do %>
  <div class="form-outline mb-4">
    <%= label_tag :role_id, "Role", class: "form-label" %>
    <%= select_tag :role_id, options_for_select(Role.all.collect{ |role| [role.name.gsub('_', ' ').titleize, role.id] }, params[:role_id]), { prompt: "--select role--", class: "form-select" } %>
  </div>

  <div class="form-outline mb-4">
    <%= label_tag :email, "Email", class: "form-label" %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>

  <div>
    <%= submit_tag "Filter", class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
