<div class="card shadow-sm" style="height: 100%;">
  <div class="card-header p-0 position-relative">
    <img src="https://i.pinimg.com/originals/1b/b7/81/1bb781737e7939d45ebf357ddee813ec.jpg" style="width:100%; height:300px;">
    <span style="position: absolute;right: 0;color: white;font-weight: 600;font-size: 18px;width: 100%;display: flex;justify-content: center;align-content: center;padding: 5px;bottom: calc(50% - 10px);text-align: center;"><%= course.name %></span>
  </div>

  <div class="card-body">
    <p class="card-text"><%= course.description %></p>
    <div class="d-flex justify-content-between align-items-center">
      <% if action_name == "index" %>
        <div class="btn-group" style=" position: absolute; top: 10px; right: 10px;">
          <%= link_to "View", admin_course_path(course), class: "btn btn-sm btn-outline-secondary", style: "color: white; border: 1px solid white;" %>
          <%= link_to "Edit", edit_admin_course_path(course), class: "btn btn-sm btn-outline-secondary", style: "color: white; border: 1px solid white;" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center flex-grow-1 ms-2">
        <small class="text-muted d-flex align-items-center"><%= "<i class='fs-4 bi-table'></i><span class='ms-2 fw-semibold'>#{course.school.name}</span>".html_safe %></small>
        <small class="text-muted"><%= "#{time_ago_in_words course.created_at} ago" %></small>
      </div>
    </div>
  </div>
</div>