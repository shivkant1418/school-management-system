<%= form_with(model: school_admin, url: admin_school_admins_path(school_admin.school)) do |form| %>
  <% if school_admin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(school_admin.errors.count, "error") %> prohibited this school admin from being saved:</h2>

      <ul>
        <% school_admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline mb-4">
    <%= form.label :user, class: "form-label" %>
    <%= form.select :user_id, options_for_select(Role.school_admin.users.where.not(id: school_admin.school.admins.ids).pluck( :email, :id )), { prompt: "Select School Admin ..." }, { class: "form-select" } %> 
  </div>

  <div>
    <%= form.submit class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>

